<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="cowl.Views.InputPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:cowl.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock
                FontSize="28"
                FontWeight="SemiBold"
                Text="Nhập thông tin công ty" />
            <TextBlock
                Margin="0,8,0,0"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Dán hoặc nhập thông tin công ty vào ô bên dưới. Hệ thống sẽ tự động trích xuất các thông tin." />
        </StackPanel>

        <!-- InfoBar for notifications -->
        <InfoBar
            x:Name="NotificationInfoBar"
            Grid.Row="1"
            Margin="0,0,0,16"
            IsClosable="True"
            IsOpen="False" />

        <!-- Input Area -->
        <Border
            Grid.Row="2"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid Padding="16">
                <TextBox
                    x:Name="InputTextBox"
                    AcceptsReturn="True"
                    Header="Nội dung công ty"
                    PlaceholderText="Ví dụ:&#x0a;Công ty: ABC Corporation&#x0a;Người đại diện: Nguyễn Văn A&#x0a;Điện thoại: 0123456789&#x0a;Địa chỉ: 123 Đường ABC, Quận 1, TP.HCM"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    TextWrapping="Wrap" />
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel
            Grid.Row="3"
            Margin="0,24,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="12">
            <Button
                Click="OnExportToWordClicked"
                Content="Xuất file Word"
                Style="{StaticResource DefaultButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="E" Modifiers="Control" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                Click="OnClearClicked"
                Content="Xóa tất cả"
                Style="{StaticResource DefaultButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Delete" Modifiers="Control" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                Click="OnProcessClicked"
                Content="Thêm công ty"
                Style="{StaticResource AccentButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Enter" Modifiers="Control" />
                </Button.KeyboardAccelerators>
            </Button>
        </StackPanel>
    </Grid>
</Page>
