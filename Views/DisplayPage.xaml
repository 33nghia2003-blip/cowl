<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="cowl.Views.DisplayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:cowl.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Text="Thông tin công ty" />
                <TextBlock
                    Margin="0,8,0,0"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Hiển thị các thông tin đã được trích xuất từ trang nhập liệu" />
                
                <!-- Search Box -->
                <AutoSuggestBox
                    x:Name="SearchBox"
                    Margin="0,16,0,0"
                    PlaceholderText="Tìm kiếm theo tên công ty, người đại diện hoặc số điện thoại..."
                    QueryIcon="Find"
                    TextChanged="OnSearchTextChanged" />
                
                <!-- Statistics -->
                <Grid Margin="0,16,0,0" ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Total Companies -->
                    <Border
                        Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="TỔNG SỐ CÔNG TY" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    FontSize="24"
                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                    Glyph="&#xE821;" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Text="{x:Bind TotalCompanies, Mode=OneWay}"
                                    VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Classified Companies -->
                    <Border
                        Grid.Column="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="ĐÃ PHÂN LOẠI" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    FontSize="24"
                                    Foreground="#10B981"
                                    Glyph="&#xE73E;" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Foreground="#10B981"
                                    Text="{x:Bind ClassifiedCompanies, Mode=OneWay}"
                                    VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Unclassified Companies -->
                    <Border
                        Grid.Column="2"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="CHƯA PHÂN LOẠI" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    FontSize="24"
                                    Foreground="#F59E0B"
                                    Glyph="&#xE7BA;" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Foreground="#F59E0B"
                                    Text="{x:Bind UnclassifiedCompanies, Mode=OneWay}"
                                    VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Company List -->
            <ItemsControl Grid.Row="1" ItemsSource="{x:Bind FilteredCompanies, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local:CompanyInfo">
                        <Border
                            Margin="0,0,0,16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="24">
                            <StackPanel Spacing="20">
                        
                        <!-- Company Name Section -->
                        <StackPanel Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="TÊN DOANH NGHIỆP" />
                                    <TextBlock
                                        FontSize="20"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind CompanyName, Mode=OneWay}"
                                        TextWrapping="Wrap" />
                                </StackPanel>

                                <!-- Classification Checkboxes -->
                                <StackPanel Grid.Column="1" Spacing="8" Orientation="Horizontal" VerticalAlignment="Center">
                                    <CheckBox
                                        Content="Có hẹn"
                                        IsChecked="{x:Bind HasAppointment, Mode=TwoWay}"
                                        MinWidth="0">
                                        <CheckBox.Resources>
                                            <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundChecked" Color="#10B981" />
                                            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="#10B981" />
                                        </CheckBox.Resources>
                                    </CheckBox>
                                    <CheckBox
                                        Content="Đang phân vân"
                                        IsChecked="{x:Bind IsConsidering, Mode=TwoWay}"
                                        MinWidth="0">
                                        <CheckBox.Resources>
                                            <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundChecked" Color="#F59E0B" />
                                            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="#F59E0B" />
                                        </CheckBox.Resources>
                                    </CheckBox>
                                    <CheckBox
                                        Content="Không có nhu cầu"
                                        IsChecked="{x:Bind NoNeed, Mode=TwoWay}"
                                        MinWidth="0">
                                        <CheckBox.Resources>
                                            <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundChecked" Color="#EF4444" />
                                            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="#EF4444" />
                                        </CheckBox.Resources>
                                    </CheckBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Separator -->
                        <Border
                            Height="1"
                            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Representative Section -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <PersonPicture
                                Grid.Column="0"
                                Width="48"
                                Height="48"
                                Margin="0,0,16,0" />

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="NGƯỜI ĐẠI DIỆN" />
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind RepresentativeName, Mode=OneWay}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <!-- Contact & Location Info -->
                        <Grid ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Phone -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="SỐ ĐIỆN THOẠI" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,8,0"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                        Glyph="&#xE717;" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="16"
                                        Text="{x:Bind PhoneNumber, Mode=OneWay}"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>

                            <!-- Status -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="TÌNH TRẠNG" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,8,0"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                        Glyph="&#xE9F3;" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="16"
                                        Text="{x:Bind Status, Mode=OneWay}"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>

                            <!-- Address (Full Width) -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="4">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="ĐỊA CHỈ" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,8,0"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                        Glyph="&#xE707;" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="16"
                                        Text="{x:Bind Address, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>

                            <!-- Business Sector -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="NGÀNH NGHỀ CHÍNH" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,8,0"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                        Glyph="&#xE7EE;" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="16"
                                        Text="{x:Bind BusinessSector, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>

                            <!-- Active Date -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="NGÀY HOẠT ĐỘNG" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,8,0"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                        Glyph="&#xE787;" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="16"
                                        Text="{x:Bind ActiveDate, Mode=OneWay}"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <!-- Separator -->
                        <Border
                            Height="1"
                            Margin="0,16,0,16"
                            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Note and Appointment Section -->
                        <StackPanel Spacing="16">
                            <!-- Note -->
                            <StackPanel Spacing="8">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="GHI CHÚ KHÁCH HÀNG" />
                                <TextBox
                                    Text="{x:Bind Note, Mode=TwoWay}"
                                    PlaceholderText="Nhập ghi chú về khách hàng..."
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MinHeight="80"
                                    MaxHeight="150" />
                            </StackPanel>

                            <!-- Appointment Date and Time -->
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Date Picker -->
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="NGÀY HẸN"
                                        Margin="0,0,0,0" />
                                    <CalendarDatePicker
                                        Date="{x:Bind AppointmentDate, Mode=TwoWay}"
                                        PlaceholderText="Chọn ngày..."
                                        HorizontalAlignment="Stretch" />
                                </StackPanel>
                                
                                <!-- Time Picker -->
                                <StackPanel Grid.Column="1" Spacing="8">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="GIỜ HẸN"
                                        Margin="0,0,0,0" />
                                    <TimePicker
                                        Time="{x:Bind AppointmentTime, Mode=TwoWay}"
                                        ClockIdentifier="24HourClock"
                                        MinuteIncrement="1"
                                        HorizontalAlignment="Stretch"
                                        Header="" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                    </StackPanel>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
        </Grid>
    </ScrollViewer>
</Page>
