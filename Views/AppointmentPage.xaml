<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="cowl.Views.AppointmentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:cowl.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon
                        FontSize="28"
                        Foreground="#10B981"
                        Glyph="&#xE73E;" />
                    <TextBlock
                        FontSize="28"
                        FontWeight="SemiBold"
                        Text="Có hẹn"
                        VerticalAlignment="Center" />
                </StackPanel>
                <TextBlock
                    Margin="0,8,0,0"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Danh sách các công ty đã hẹn lịch làm việc" />
            </StackPanel>

            <!-- Company List -->
            <ItemsControl Grid.Row="1" ItemsSource="{x:Bind AppointmentCompanies, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local:CompanyInfo">
                        <Border
                            Margin="0,0,0,16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="#10B981"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="24">
                            <StackPanel Spacing="20">
                                
                                <!-- Company Name Section -->
                                <StackPanel Spacing="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="TÊN DOANH NGHIỆP" />
                                            <TextBlock
                                                FontSize="20"
                                                FontWeight="SemiBold"
                                                Text="{x:Bind CompanyName, Mode=OneWay}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                        <FontIcon
                                            Grid.Column="1"
                                            FontSize="24"
                                            Foreground="#10B981"
                                            Glyph="&#xE73E;" />
                                    </Grid>
                                </StackPanel>

                                <!-- Separator -->
                                <Border
                                    Height="1"
                                    Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                                <!-- Representative Section -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <PersonPicture
                                        Grid.Column="0"
                                        Width="48"
                                        Height="48"
                                        Margin="0,0,16,0" />

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="NGƯỜI ĐẠI DIỆN" />
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind RepresentativeName, Mode=OneWay}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>

                                <!-- Contact & Location Info -->
                                <Grid ColumnSpacing="24" RowSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Phone -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="SỐ ĐIỆN THOẠI" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <FontIcon
                                                Grid.Column="0"
                                                Margin="0,0,8,0"
                                                FontSize="16"
                                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                Glyph="&#xE717;" />
                                            <TextBlock
                                                Grid.Column="1"
                                                FontSize="16"
                                                Text="{x:Bind PhoneNumber, Mode=OneWay}"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </StackPanel>

                                    <!-- Status -->
                                    <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="TÌNH TRẠNG" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <FontIcon
                                                Grid.Column="0"
                                                Margin="0,0,8,0"
                                                FontSize="16"
                                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                Glyph="&#xE9F3;" />
                                            <TextBlock
                                                Grid.Column="1"
                                                FontSize="16"
                                                Text="{x:Bind Status, Mode=OneWay}"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </StackPanel>

                                    <!-- Address -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="4">
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="ĐỊA CHỈ" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <FontIcon
                                                Grid.Column="0"
                                                Margin="0,0,8,0"
                                                FontSize="16"
                                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                Glyph="&#xE707;" />
                                            <TextBlock
                                                Grid.Column="1"
                                                FontSize="16"
                                                Text="{x:Bind Address, Mode=OneWay}"
                                                TextWrapping="Wrap"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </StackPanel>

                                    <!-- Business Sector -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="NGÀNH NGHỀ CHÍNH" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <FontIcon
                                                Grid.Column="0"
                                                Margin="0,0,8,0"
                                                FontSize="16"
                                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                Glyph="&#xE7EE;" />
                                            <TextBlock
                                                Grid.Column="1"
                                                FontSize="16"
                                                Text="{x:Bind BusinessSector, Mode=OneWay}"
                                                TextWrapping="Wrap"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </StackPanel>

                                    <!-- Active Date -->
                                    <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4">
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="NGÀY HOẠT ĐỘNG" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <FontIcon
                                                Grid.Column="0"
                                                Margin="0,0,8,0"
                                                FontSize="16"
                                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                Glyph="&#xE787;" />
                                            <TextBlock
                                                Grid.Column="1"
                                                FontSize="16"
                                                Text="{x:Bind ActiveDate, Mode=OneWay}"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </StackPanel>
                                </Grid>

                                <!-- Note and Appointment (Read-only) -->
                                <Border
                                    Height="1"
                                    Margin="0,4,0,4"
                                    Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                                <StackPanel Spacing="12">
                                    <!-- Note (Read-only) -->
                                    <StackPanel Spacing="4">
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="GHI CHÚ" />
                                        <TextBlock
                                            FontSize="14"
                                            Text="{x:Bind Note, Mode=OneWay}"
                                            TextWrapping="Wrap"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>

                                    <!-- Appointment Date and Time (Read-only) -->
                                    <Grid ColumnSpacing="16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Date -->
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="NGÀY HẸN" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <FontIcon
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    FontSize="16"
                                                    Foreground="#10B981"
                                                    Glyph="&#xE787;" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Foreground="#10B981"
                                                    Text="{x:Bind AppointmentDate, Mode=OneWay}"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </StackPanel>

                                        <!-- Time -->
                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="GIỜ HẸN" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <FontIcon
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    FontSize="16"
                                                    Foreground="#10B981"
                                                    Glyph="&#xE917;" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Foreground="#10B981"
                                                    Text="{x:Bind AppointmentTime, Mode=OneWay}"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</Page>
