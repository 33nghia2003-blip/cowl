<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="cowl.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:cowl.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView
        x:Name="NavView"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        IsPaneToggleButtonVisible="False"
        PaneDisplayMode="Left"
        SelectionChanged="NavView_SelectionChanged">

        <NavigationView.PaneHeader>
            <StackPanel Margin="16,8" Spacing="8">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="Cowl" />
            </StackPanel>
        </NavigationView.PaneHeader>

        <NavigationView.MenuItems>
            <NavigationViewItem
                x:Name="InputNavItem"
                Content="Nhập liệu"
                Tag="Input">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE70F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem
                x:Name="DisplayNavItem"
                Content="Hiển thị"
                Tag="Display">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8F4;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem
                x:Name="TimelineNavItem"
                Content="Xem theo ngày"
                Tag="Timeline">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE787;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            
            <NavigationViewItemSeparator />
            <NavigationViewItemHeader Content="Phân loại" />
            
            <NavigationViewItem
                x:Name="AppointmentNavItem"
                Content="Có hẹn"
                Tag="Appointment">
                <NavigationViewItem.Icon>
                    <FontIcon Foreground="#10B981" Glyph="&#xE73E;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem
                x:Name="ConsideringNavItem"
                Content="Đang phân vân"
                Tag="Considering">
                <NavigationViewItem.Icon>
                    <FontIcon Foreground="#F59E0B" Glyph="&#xE7C5;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem
                x:Name="NoNeedNavItem"
                Content="Không có nhu cầu"
                Tag="NoNeed">
                <NavigationViewItem.Icon>
                    <FontIcon Foreground="#EF4444" Glyph="&#xE711;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <NavigationView.PaneFooter>
            <StackPanel>
                <NavigationViewItemSeparator />
                <StackPanel Margin="16,8" Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <PersonPicture Width="32" Height="32" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                x:Name="UserNameText"
                                FontWeight="SemiBold"
                                Text="User" />
                            <TextBlock
                                x:Name="UserEmailText"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="user@email.com" />
                        </StackPanel>
                    </StackPanel>
                    <Button
                        x:Name="LogoutButton"
                        HorizontalAlignment="Stretch"
                        Click="OnLogoutClicked"
                        Content="Đăng xuất">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </NavigationView.PaneFooter>

        <Frame x:Name="ContentFrame" />
    </NavigationView>
</Page>
