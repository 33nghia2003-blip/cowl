<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="cowl.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:cowl.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView x:ConnectionId='2'
        x:Name="NavView"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        IsPaneToggleButtonVisible="False"
        PaneDisplayMode="Left"
                                                   >

        <NavigationView.MenuItems>
            <NavigationViewItem x:ConnectionId='3'
                x:Name="InputNavItem"
                Content="Nhập liệu"
                Tag="Input">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE70F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem x:ConnectionId='4'
                x:Name="DisplayNavItem"
                Content="Hiển thị"
                Tag="Display">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8F4;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            
            <NavigationViewItemSeparator />
            <NavigationViewItemHeader Content="Phân loại" />
            
            <NavigationViewItem x:ConnectionId='5'
                x:Name="AppointmentNavItem"
                Content="Có hẹn"
                Tag="Appointment">
                <NavigationViewItem.Icon>
                    <FontIcon Foreground="#10B981" Glyph="&#xE73E;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem x:ConnectionId='6'
                x:Name="ConsideringNavItem"
                Content="Đang phân vân"
                Tag="Considering">
                <NavigationViewItem.Icon>
                    <FontIcon Foreground="#F59E0B" Glyph="&#xE7C5;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem x:ConnectionId='7'
                x:Name="NoNeedNavItem"
                Content="Không có nhu cầu"
                Tag="NoNeed">
                <NavigationViewItem.Icon>
                    <FontIcon Foreground="#EF4444" Glyph="&#xE711;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <Frame x:ConnectionId='8' x:Name="ContentFrame" />
    </NavigationView>
</Page>

