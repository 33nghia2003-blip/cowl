<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="cowl.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:cowl.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF4ECDC4" Offset="0" />
                <GradientStop Color="#FF6B6BFF" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <ScrollViewer
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <Grid MaxWidth="450" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="48,40">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel Spacing="24">
                        <!-- Logo/Header -->
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="48"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                Glyph="&#xE8FA;" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="28"
                                FontWeight="SemiBold"
                                Text="Đăng Ký" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Tạo tài khoản mới" />
                        </StackPanel>

                        <!-- InfoBar for notifications -->
                        <InfoBar x:ConnectionId='2'
                            x:Name="RegisterInfoBar"
                            IsClosable="True"
                            IsOpen="False" />

                        <!-- Register Form -->
                        <StackPanel Spacing="16">
                            <!-- Full Name -->
                            <TextBox x:ConnectionId='6'
                                x:Name="FullNameTextBox"
                                Header="Họ và tên"
                                PlaceholderText="Nhập họ và tên đầy đủ"
                                                          >
                                <TextBox.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="12"
                                                Glyph="&#xE77B;" />
                                            <TextBlock Text="Họ và tên" />
                                        </StackPanel>
                                    </DataTemplate>
                                </TextBox.HeaderTemplate>
                            </TextBox>

                            <!-- Username -->
                            <TextBox x:ConnectionId='7'
                                x:Name="UsernameTextBox"
                                Header="Tên đăng nhập"
                                PlaceholderText="Nhập tên đăng nhập"
                                                                   
                                                          >
                                <TextBox.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="12"
                                                Glyph="&#xE748;" />
                                            <TextBlock Text="Tên đăng nhập" />
                                        </StackPanel>
                                    </DataTemplate>
                                </TextBox.HeaderTemplate>
                            </TextBox>
                            <TextBlock x:ConnectionId='8'
                                x:Name="UsernameStatusText"
                                FontSize="12"
                                Margin="0,-12,0,0"
                                Visibility="Collapsed" />

                            <!-- Email -->
                            <TextBox x:ConnectionId='9'
                                x:Name="EmailTextBox"
                                Header="Email"
                                PlaceholderText="Nhập địa chỉ email"
                                                                
                                                          >
                                <TextBox.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="12"
                                                Glyph="&#xE715;" />
                                            <TextBlock Text="Email" />
                                        </StackPanel>
                                    </DataTemplate>
                                </TextBox.HeaderTemplate>
                            </TextBox>
                            <TextBlock x:ConnectionId='10'
                                x:Name="EmailStatusText"
                                FontSize="12"
                                Margin="0,-12,0,0"
                                Visibility="Collapsed" />

                            <!-- Password -->
                            <PasswordBox x:ConnectionId='11'
                                x:Name="PasswordBox"
                                Header="Mật khẩu"
                                PlaceholderText="Nhập mật khẩu (tối thiểu 6 ký tự)"
                                                                   
                                                              >
                                <PasswordBox.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="12"
                                                Glyph="&#xE72E;" />
                                            <TextBlock Text="Mật khẩu" />
                                        </StackPanel>
                                    </DataTemplate>
                                </PasswordBox.HeaderTemplate>
                            </PasswordBox>

                            <!-- Password Strength Indicator -->
                            <StackPanel x:ConnectionId='12' x:Name="PasswordStrengthPanel" Spacing="4" Visibility="Collapsed">
                                <TextBlock x:ConnectionId='17'
                                    x:Name="PasswordStrengthText"
                                    FontSize="12"
                                    Text="Độ mạnh: Yếu" />
                                <ProgressBar x:ConnectionId='18'
                                    x:Name="PasswordStrengthBar"
                                    Maximum="100"
                                    Value="0" />
                            </StackPanel>

                            <!-- Confirm Password -->
                            <PasswordBox x:ConnectionId='13'
                                x:Name="ConfirmPasswordBox"
                                Header="Xác nhận mật khẩu"
                                PlaceholderText="Nhập lại mật khẩu"
                                                                          
                                                              >
                                <PasswordBox.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="12"
                                                Glyph="&#xE72E;" />
                                            <TextBlock Text="Xác nhận mật khẩu" />
                                        </StackPanel>
                                    </DataTemplate>
                                </PasswordBox.HeaderTemplate>
                            </PasswordBox>
                            <TextBlock x:ConnectionId='14'
                                x:Name="PasswordMatchText"
                                FontSize="12"
                                Margin="0,-12,0,0"
                                Visibility="Collapsed" />

                            <!-- Terms Agreement -->
                            <CheckBox x:ConnectionId='15' x:Name="AgreeTermsCheckBox"                                                              >
                                <TextBlock TextWrapping="Wrap">
                                    <Run Text="Tôi đồng ý với " />
                                    <Hyperlink>Điều khoản dịch vụ</Hyperlink>
                                    <Run Text=" và " />
                                    <Hyperlink>Chính sách bảo mật</Hyperlink>
                                </TextBlock>
                            </CheckBox>
                        </StackPanel>

                        <!-- Register Button -->
                        <Button x:ConnectionId='3'
                            x:Name="RegisterButton"
                            HorizontalAlignment="Stretch"
                                                     
                            Content="Đăng Ký"
                            IsEnabled="False"
                            Style="{StaticResource AccentButtonStyle}">
                            <Button.KeyboardAccelerators>
                                <KeyboardAccelerator Key="Enter" />
                            </Button.KeyboardAccelerators>
                        </Button>

                        <!-- Progress Ring -->
                        <ProgressRing x:ConnectionId='4'
                            x:Name="LoadingRing"
                            HorizontalAlignment="Center"
                            IsActive="False"
                            Visibility="Collapsed" />

                        <!-- Divider -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Height="1"
                                VerticalAlignment="Center"
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="12,0"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="hoặc" />
                            <Border
                                Grid.Column="2"
                                Height="1"
                                VerticalAlignment="Center"
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
                        </Grid>

                        <!-- Login Link -->
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="4">
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Đã có tài khoản?" />
                            <HyperlinkButton x:ConnectionId='5'
                                Padding="4,0"
                                                      
                                Content="Đăng nhập ngay" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

